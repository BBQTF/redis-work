<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="rediswork.rediswork.mapper.UserMapper">
    <resultMap id="user" type="rediswork.rediswork.bean.user.UserBean">
        <result column="id" property="id" jdbcType="VARCHAR" />
        <result column="username" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="loginname" property="loginName" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="VARCHAR" />
    </resultMap>
    <select id="getUserDetail" resultMap="user">
        select * from user where loginname = #{username}
    </select>
    <select id="login" resultType="integer">
        select count(1) from user where loginname = #{username} and password = #{password}
    </select>
</mapper>